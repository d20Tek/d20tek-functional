@page "/account"
@using WealthTracker.Domain
@inject IWealthRepository _repo;

<PageTitle>Wealth Tracker - Accounts</PageTitle>
<h3>Accounts</h3>

@if (accounts.Length <= 0)
{
    <div>No accounts available... please start adding some accounts.</div>
}
else
{
    <table class="table table-sm table-bordered table-striped">
        <thead>
            <tr>
                <th class="col-1 text-center">Id</th>
                <th class="col-4">Name</th>
                <th class="col-6">Categories</th>
                <th class="col-1"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var account in accounts)
        {
            <tr>
                <td class="text-center">@account.Id</td>
                <td>@account.Name</td>
                <td>@(string.Join(", ", account.Categories))</td>
                <td><a href=@($"/account/edit/{account.Id}")>Ed</a> | <a href=@($"/account/delete/{account.Id}")>Del</a></td>
            </tr>
        }
        </tbody>
    </table>
}

<div class="mt-2"><a class="btn btn-outline-primary" href="/account/add">Add Account</a></div>

@code {
    WealthDataEntity[] accounts = [];

    protected override void OnInitialized() => accounts = _repo.GetEntities();
}
