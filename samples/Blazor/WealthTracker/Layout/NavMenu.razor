<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Wealth Tracker</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="account">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Accounts
            </NavLink>
        </div>
        <div class="nav-item dropdown px-3">
            <NavLink class="nav-link dropdown-toggle" style="cursor: pointer" @onclick="()=>expandReportsSubNav = !expandReportsSubNav">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Reports
            </NavLink>
            @if (expandReportsSubNav)
            {
                <NavLink class="nav-link ps-4" href="report/current">Current</NavLink>
                <NavLink class="nav-link ps-4" href="report/monthly">Monthly</NavLink>
                <NavLink class="nav-link ps-4" href="report/yearly">Yearly</NavLink>
            }
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandReportsSubNav;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;
}
